<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>QuestionnaireApi</servlet-name>
        <servlet-class>com.yourcompany.api.QuestionnaireApiServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>QuestionnaireApi</servlet-name>
        <url-pattern>/api/questions</url-pattern>
        <url-pattern>/api/questions/*</url-pattern>
    </servlet-mapping>
    
    <context-param>
        <param-name>dataDir</param-name>
        <param-value>D:/Tomcat_Data/Questionnaire_Config</param-value>
    </context-param>
    
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

</web-app>